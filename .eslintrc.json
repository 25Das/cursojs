{
	"env": {
		// "commonjs": true,
		//"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": ["airbnb-base", "plugin:prettier/recommended"],
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"rules": {
		"no-console": "off",
		"no-alert": "off",
		"class-methods-use-this": "off",
		"import/first": "off",
		"no-param-reassign": "off",
		"camelcase": "off",
		"prettier/prettier": [
			"error",
			{
				"useTabs": true,
				"tabWidth": 4,
				"printWidth": 100,
				"semi": true,
				"singleQuote": true,
				"trailingComma": "all",
				"bracketSpacing": true,
				"arrowParens": "avoid",
				"htmlWhitespaceSensitivity": "css"
			}
		]
	}
}
