{
	"env": {
		// "commonjs": true,
		"browser": true,
		"es2021": true
		// "node": true
	},
	"extends": ["airbnb-base", "plugin:prettier/recommended"],
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"rules": {
		"no-console": "off",
		"allowForLoopAfterthoughts": 0, //true,
		// "camelcase": "off",
		"prettier/prettier": [
			"error",
			{
				"useTabs": true,
				"tabWidth": 2,
				"printWidth": 80,
				"semi": true,
				"singleQuote": true,
				"trailingComma": "all",
				"bracketSpacing": true,
				"arrowParens": "avoid",
				"htmlWhitespaceSensitivity": "css"
			}
		]
	}
}
