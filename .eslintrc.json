{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
		"plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
		"camelcase":"off",
		"prettier/prettier": [
			"error",
			{
			"useTabs": true,
			"tabWidth": 2,
			"printWidth": 80,
			"semi": true,
			"singleQuote": true,
			"trailingComma": "all",
			"bracketSpacing": true,
			"arrowParens": "avoid",
			"htmlWhitespaceSensitivity": "ignore"
		}
	]
    }
}
